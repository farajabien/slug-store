# Slug Store Example App Environment Configuration

# App Configuration
NEXT_PUBLIC_APP_NAME="Slug Store Demo"
NEXT_PUBLIC_APP_URL="https://slugstore.fbien.com"
NEXT_PUBLIC_APP_DESCRIPTION="A demonstration of URL state persistence with Slug Store"

# Email Service (for sharing functionality)
# Sign up at https://resend.com for a free API key
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_FROM_EMAIL="hello@fbien.com"

# Analytics (optional)
# Sign up at https://vercel.com/analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ENCRYPTION=true
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_EMAIL_SHARING=true

# Development
NODE_ENV="development"
NEXT_PUBLIC_DEBUG_MODE=true 