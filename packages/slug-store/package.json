{
  "name": "slug-store",
  "version": "4.0.2",
  "description": "The State Management Solution for the Next.js App Router.",
  "keywords": [
    "react",
    "nextjs",
    "state management",
    "server components",
    "server actions",
    "full-stack"
  ],
  "homepage": "https://github.com/farajabien/slug-store",
  "repository": {
    "type": "git",
    "url": "https://github.com/farajabien/slug-store.git",
    "directory": "packages/slug-store"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest",
    "clean": "rm -rf .turbo && rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "next": "^14.0.0"
  },
  "dependencies": {
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "@types/react": "^18.2.45",
    "eslint": "^8.56.0",
    "react": "^18.2.0",
    "next": "^14.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
