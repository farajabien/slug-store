{
  "name": "@farajabien/slug-store",
  "version": "2.0.1",
  "description": "Universal state persistence for client and server - URLs, databases, cache, and more",
  "keywords": [
    "react",
    "state",
    "url",
    "persistence",
    "server",
    "cache",
    "supabase",
    "database",
    "compression",
    "encryption"
  ],
  "homepage": "https://github.com/farajabien/slug-store",
  "repository": {
    "type": "git",
    "url": "https://github.com/farajabien/slug-store.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts", 
      "import": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rm -rf .turbo && rm -rf dist"
  },
  "dependencies": {
    "@farajabien/slug-store-core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "redis": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "redis": {
      "optional": true
    }
  },
  "devDependencies": {
    "@farajabien/eslint-config": "workspace:*",
    "@farajabien/typescript-config": "workspace:*",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.45",
    "eslint": "^8.56.0",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
