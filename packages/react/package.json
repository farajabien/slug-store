{
  "name": "@farajabien/slug-store",
  "version": "3.0.1",
  "description": "Universal state persistence for modern web apps. Zero obstruction, maximum DevEx.",
  "keywords": [
    "react",
    "state",
    "url",
    "persistence",
    "server",
    "database",
    "compression",
    "encryption",
    "offline",
    "sync"
  ],
  "homepage": "https://github.com/farajabien/slug-store",
  "repository": {
    "type": "git",
    "url": "https://github.com/farajabien/slug-store.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rm -rf .turbo && rm -rf dist"
  },
  "dependencies": {
    "@farajabien/slug-store-core": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.45",
    "@vitest/ui": "^3.2.4",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^8.56.0",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
